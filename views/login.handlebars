<section class="col-10">
  <section id="form-card" class="card d-flex flex-column justify-content-center">
    
    <section class="card-header">
      <h2 id="form-card-header">Login</h2>
    </section>
    
    <form class="card-body login-form d-flex flex-column">
      <label for="username-login">Username</label>
      <input type="text" id="username-login" class="form-control-lg" />

      <label for="password-login">Password</label>
      <input type="password" id="password-login" class="form-control-lg" />

      <br>
      <button class="btn btn-secondary" type="submit">Login!</button>

      <p class="mt-2"> <a href="/signup" class="login-signup-anchor">Sign up instead</a> </p>
    </form>

  </section>
</section>

